{
  "name": "taskhub-backend",
  "version": "1.0.0",
  "description": "TaskHub QA Sandbox - Backend API for test case management",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:api": "jest tests/api",
    "test:db": "jest tests/db",
    "test:ui": "playwright test",
    "test:ui:headed": "playwright test --headed",
    "test:all": "npm run test:api && npm run test:db && npm run test:ui",
    "init-db": "node src/database/init.js",
    "lint": "npx eslint src/ --ext .js",
    "lint:fix": "npx eslint src/ --ext .js --fix"
  },
  "keywords": [
    "qa",
    "testing",
    "automation",
    "api",
    "swagger"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "sqlite3": "^5.1.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  }
}
